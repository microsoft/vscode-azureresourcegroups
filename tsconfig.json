{
    "compilerOptions": {
        "module": "es2022",
        "moduleResolution": "bundler",
        "target": "es2022",
        "outDir": "out",
        "lib": [
            "es2022"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ],
        },
        "skipLibCheck": false
    },
    "exclude": [
        "**/node_modules",
        ".vscode-test",
        "gulpfile.ts",
        "**/dist",
        "**/out"
    ]
}
