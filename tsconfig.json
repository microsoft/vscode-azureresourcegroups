{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "lib": [
            "es6",
            "DOM"
        ],
        "sourceMap": true,
        "rootDir": ".",
        "strict": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "noUnusedParameters": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./",
        "paths": {
            "*": [
                "node_modules/@types/*",
                "*"
            ],
        },
        "skipLibCheck": false
    },
    "exclude": [
        "node_modules",
        ".vscode-test",
        "gulpfile.ts",
        "api/dist",
        "api/out",
        "out"
    ]
}
